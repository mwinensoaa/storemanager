<BorderPane prefHeight="534.0" prefWidth="464.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mwinensoaa.storemanager.controller.NewCashierController">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="397.0" spacing="3.0">
         <children>
            <VBox>
               <children>
                  <Label fx:id="lbCashierId" prefHeight="17.0" prefWidth="393.0" text="Cashier Id" />
                  <HBox spacing="5.0">
                     <children>
                        <TextField fx:id="tfCashierID" prefHeight="25.0" prefWidth="315.0" />
                        <Button fx:id="btnGenerate" mnemonicParsing="false" prefHeight="25.0" prefWidth="78.0" text="Generate" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbFullName" prefHeight="17.0" prefWidth="397.0" text="Full name" />
                  <TextField fx:id="tfCashierName" prefHeight="31.0" prefWidth="230.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbDateEmployed" prefHeight="17.0" prefWidth="385.0" text="Date employed" />
                  <DatePicker fx:id="dpDateEmployed" editable="false" prefHeight="31.0" prefWidth="464.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbDateOfBirth" prefHeight="17.0" prefWidth="382.0" text="Date of birth" />
                  <DatePicker fx:id="dpDob" editable="false" prefHeight="31.0" prefWidth="461.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbTelephone" prefHeight="17.0" prefWidth="390.0" text="Telephone number" />
                  <TextField fx:id="tfTelephone" prefHeight="31.0" prefWidth="230.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbPassword" prefHeight="17.0" prefWidth="387.0" text="Password" />
                  <PasswordField fx:id="tfPassword" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbConfirmPass" prefHeight="17.0" prefWidth="392.0" text="Confirm password" />
                  <PasswordField fx:id="tfConfirmPassword" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbPrivileges" prefHeight="17.0" prefWidth="394.0" text="Privileges" />
                  <ComboBox fx:id="privilegesCombo" prefHeight="39.0" prefWidth="491.0" promptText="Select" />
               </children>
            </VBox>
            <Pane prefHeight="67.0" prefWidth="397.0">
               <children>
                  <ImageView fx:id="imgCashier" fitHeight="63.0" fitWidth="60.0" layoutX="326.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="btnFileChooser" layoutY="11.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="214.0" text="Choose Cashier's image" />
               </children>
            </Pane>
         </children>
      </VBox>
   </center>
   <top>
      <Pane fx:id="pane" prefHeight="45.0" prefWidth="910.0" BorderPane.alignment="CENTER">
         <children>
            <FontAwesomeIconView fx:id="btnClose" fill="WHITE" glyphName="CLOSE" layoutX="427.0" layoutY="27.0" size="20" />
            <ImageView fitHeight="66.0" fitWidth="43.0" layoutX="2.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo4.png" />
               </image>
            </ImageView>
            <Label fx:id="lbNewCashier" alignment="CENTER" layoutX="84.0" layoutY="14.0" prefHeight="17.0" prefWidth="290.0" text="New Cashier" />
         </children>
      </Pane>
   </top>
   <left>
      <Pane prefHeight="575.0" prefWidth="31.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="454.0" prefWidth="36.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <HBox alignment="CENTER" prefHeight="62.0" prefWidth="464.0">
         <children>
            <Button fx:id="btnAddCashier" prefHeight="35.0" prefWidth="222.0" text="Save" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>

<BorderPane prefHeight="221.0" prefWidth="249.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mwinensoaa.storemanager.controller.RestockProductController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="155.0" prefWidth="259.0" spacing="5.0">
            <children>
            <VBox>
               <children>
                  <Label fx:id="lbProduct" prefHeight="17.0" prefWidth="180.0" text="Product" />
                  <ComboBox fx:id="comboProductName" prefHeight="25.0" prefWidth="180.0" promptText="Select" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbQuantity" prefHeight="17.0" prefWidth="180.0" text="Quantity" />
                      <TextField fx:id="tfQuantity" prefHeight="31.0" prefWidth="230.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="lbDateInStock" prefHeight="17.0" prefWidth="186.0" text="Date" />
                  <DatePicker fx:id="dpDateStocked" prefHeight="25.0" prefWidth="182.0" promptText="Date" />
               </children>
            </VBox>
            </children>
        </VBox>
    </center>
    <top>
        <Pane fx:id="pane" prefHeight="33.0" prefWidth="249.0" BorderPane.alignment="CENTER">
            <children>
                <FontAwesomeIconView fx:id="lbClose" fill="WHITE" glyphName="CLOSE" layoutX="222.0" layoutY="21.0" size="20" />
                <ImageView fx:id="imgLogo" fitHeight="25.0" fitWidth="35.0" layoutX="5.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lbRestock" alignment="CENTER" layoutX="48.0" layoutY="8.0" prefHeight="17.0" prefWidth="164.0" text="Restock " />
            </children>
        </Pane>
    </top>
    <left>
        <Pane prefHeight="575.0" prefWidth="31.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Pane prefHeight="454.0" prefWidth="36.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="464.0">
            <children>
                <Button fx:id="btnRestock" prefHeight="27.0" prefWidth="84.0" text="Restock" textFill="WHITE" />
            </children>
        </HBox>
    </bottom>
</BorderPane>

    <center>
      <HBox spacing="10.0">
         <children>
              <VBox alignment="TOP_CENTER" prefHeight="155.0" prefWidth="259.0" spacing="10.0">
                  <children>
                  <RadioButton fx:id="radioSpecificProduct" mnemonicParsing="false" prefHeight="17.0" prefWidth="152.0" text="For specific product(s)" textFill="#49c64d" />
                  <VBox>
                     <children>
                        <Label fx:id="lbProduct" prefHeight="17.0" prefWidth="137.0" text="Product(s)" />
                        <MenuButton fx:id="productsMenuButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="151.0" text="Select">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Action 1" />
                            <MenuItem mnemonicParsing="false" text="Action 2" />
                          </items>
                        </MenuButton>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label fx:id="lbDiscountRate" prefHeight="17.0" prefWidth="137.0" text="Discount %" />
                            <TextField fx:id="tfTotalDiscountProduct" prefHeight="31.0" prefWidth="230.0" />
                     </children>
                  </VBox>
                  </children>
              </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="155.0" prefWidth="259.0" spacing="10.0">
               <children>
                  <RadioButton fx:id="radioMinPurchase" mnemonicParsing="false" prefHeight="17.0" prefWidth="158.0" text="Min. purchase discount" textFill="#49c64d" />
                  <VBox>
                     <children>
                        <Label fx:id="lbMinPurchase" prefHeight="17.0" prefWidth="152.0" text="Minimum total purchase" />
                        <TextField fx:id="tfMinPurchase" prefHeight="31.0" prefWidth="230.0" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label fx:id="lbDiscountRate2" prefHeight="17.0" prefWidth="124.0" text="Discount %" />
                        <TextField fx:id="tfTotalDiscountMin" prefHeight="31.0" prefWidth="230.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
    </center>
    <top>
        <Pane fx:id="pane" prefHeight="33.0" prefWidth="249.0" BorderPane.alignment="CENTER">
            <children>
                <FontAwesomeIconView fx:id="lbClose" fill="WHITE" glyphName="CLOSE" layoutX="351.0" layoutY="21.0" size="20" />
                <ImageView fx:id="imgLogo" fitHeight="25.0" fitWidth="35.0" layoutX="5.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lbDiscount" alignment="CENTER" layoutX="78.0" layoutY="8.0" prefHeight="17.0" prefWidth="222.0" text="Discount" />
            </children>
        </Pane>
    </top>
    <left>
        <Pane prefHeight="575.0" prefWidth="31.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Pane prefHeight="454.0" prefWidth="36.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="464.0">
            <children>
                <Button fx:id="btnSave" prefHeight="27.0" prefWidth="84.0" text="Save" textFill="WHITE" />
            </children>
        </HBox>
    </bottom>

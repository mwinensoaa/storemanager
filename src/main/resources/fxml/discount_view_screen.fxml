<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="230.0" prefWidth="248.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mwinensoaa.storemanager.controller.DiscountViewController">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="155.0" prefWidth="259.0" spacing="5.0">
            <children>
                <TextField fx:id="tfSearch" prefHeight="25.0" prefWidth="166.0" promptText="Search" />
                <ListView fx:id="listView" prefHeight="292.0" prefWidth="116.0" />
            </children>
        </VBox>
    </center>
    <top>
        <Pane fx:id="pane" prefHeight="29.0" prefWidth="248.0" BorderPane.alignment="CENTER">
            <children>
                <FontAwesomeIconView fx:id="lbClose" fill="WHITE" glyphName="CLOSE" layoutX="218.0" layoutY="21.0" size="20" />
                <ImageView fx:id="imgLogo" fitHeight="27.0" fitWidth="36.0" layoutX="5.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lbDiscountList" alignment="CENTER" layoutX="52.0" layoutY="6.0" prefHeight="17.0" prefWidth="149.0" text="List of  discounts" />
            </children>
        </Pane>
    </top>
    <left>
        <VBox alignment="CENTER" prefHeight="183.0" prefWidth="34.0">
            <children>
                <Button fx:id="btnEditDiscount" contentDisplay="CENTER" prefHeight="27.0" prefWidth="18.0" text="." textFill="WHITE">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="EDIT" />
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>
    <right>
        <VBox alignment="CENTER" prefHeight="183.0" prefWidth="34.0">
            <children>
                <Button fx:id="btnRemoveDiscount" contentDisplay="CENTER" prefHeight="27.0" prefWidth="18.0" text="." textFill="WHITE">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="MINUS" />
                    </graphic>
                </Button>
            </children>
        </VBox>
    </right>
    <bottom>
        <HBox alignment="CENTER" prefHeight="18.0" prefWidth="248.0" />
    </bottom>
</BorderPane>

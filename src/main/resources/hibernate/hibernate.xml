<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect"> org.hibernate.dialect.H2Dialect </property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:file:./storedb;INIT=CREATE SCHEMA IF NOT EXISTS storedb;TRACE_LEVEL_FILE=3;AUTO_SERVER=TRUE;MODE=MySQL</property>
        <property name="hibernate.connection.username">store</property>
        <property name="hibernate.connection.password"/>
        <property name="connection.pool_ size">5</property>


        <!-- Enable Hibernate's automatic saleSession context management -->
        <property name="current_session_context_class">thread</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

    <!--for batc size for bathc processing -->
        <property name = "hibernate.jdbc.batch_size">50</property>

        <!-- helper debug settings -->
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">false</property>
        <property name = "hibernate.id.new_generator_mappings">false</property>
<!--        <property name = "hibernate.globally_quoted_identifiers">true</property>-->

        <!-- annotated entity classes -->
        <mapping class="com.mwinensoaa.storemanager.entities.Cashier"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Product"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Transaction"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.SaleSession"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Tax"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Settings"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.ProductType"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.LastIdStore"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Restock"/>
        <mapping class = "com.mwinensoaa.storemanager.entities.Dosage"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Discount"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.PropsSettings"/>
        <mapping class ="com.mwinensoaa.storemanager.entities.Sale"/>


    </session-factory>
</hibernate-configuration>